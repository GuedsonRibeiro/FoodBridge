CREATE TABLE DOADORES (
  ID INT PRIMARY KEY AUTO_INCREMENT,
  Nome VARCHAR(50),
  Endereco VARCHAR(100),
  Telefone VARCHAR(15)
);

CREATE TABLE ORGANIZACOES (
  ID INT PRIMARY KEY AUTO_INCREMENT,
  Nome VARCHAR(50),
  Endereco VARCHAR(100),
  Telefone VARCHAR(15)
);

CREATE TABLE DOACOES (
  ID INT PRIMARY KEY AUTO_INCREMENT,
  ID_Doador INT,
  ID_Organizacao INT,
  Tipo_de_Alimento VARCHAR(50),
  Quantidade INT,
  Data DATE,
  FOREIGN KEY (ID_Doador) REFERENCES DOADORES(ID),
  FOREIGN KEY (ID_Organizacao) REFERENCES ORGANIZACOES(ID)
);
